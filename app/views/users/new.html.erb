<div class="container my-5 py-4">
  <div class="row">
    <div class="col-12 col-md-8 col-lg-8 mx-auto">
      <div class="card border-0 shadow my-4 py-5">
        <div class="card-body p-5">
          <h1 class="card-title text-center mb-4">新規登録</h1>
          <%= form_with model: @user, local: true do |f| %>
            <div class="mb-4">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: 'form-control' %>
            </div>
            <div class="mb-4">
              <%= f.label :first_name %>
              <%= f.text_field :first_name, class: 'form-control' %>
            </div>
            <div class="mb-4">
              <%= f.label :email, "メールアドレス", class: 'form-label' %>
              <%= f.email_field :email, class: 'form-control', placeholder: 'name@example.com', id: 'emailInput' %>
            </div>
            <div class="mb-4">
              <%= f.label :password, "パスワード", class: 'form-label' %>
              <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード', id: 'passwordInput' %>
            </div>
            <div class="mb-4">
              <%= f.label :password_confirmation, "パスワード確認", class: 'form-label' %>
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'パスワード確認', id: 'passwordConfirmationInput' %>
            </div>
            <%= f.submit '登録', class: 'btn btn-dark btn-block' %>
          <% end %>
          <div class="text-center mt-4">
            <%= link_to 'ログインページへ', login_path, class: 'link-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>