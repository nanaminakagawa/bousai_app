<div class="container my-5 py-4">
  <div class="row">
    <div class="col-12 col-md-8 col-lg-6 mx-auto">
      <div class="card border-0 shadow my-4 py-5">
        <div class="card-body p-5">
          <h1 class="card-title text-center mb-4">ログイン</h1>
          <%= form_with url: login_path, local: true do |form| %>
            <div class="mb-4">
              <%= form.label :email, "メールアドレス", class: "form-label" %>
              <%= form.email_field :email, class: "form-control", placeholder: "name@example.com" %>
            </div>
            <div class="mb-4">
              <%= form.label :password, "パスワード", class: "form-label" %>
              <%= form.password_field :password, class: "form-control", placeholder: "パスワード" %>
            </div>
            <%= form.submit "ログイン", class: "btn btn-dark btn-block" %>
          <% end %>
          <div class="text-center mt-4">
            <%= link_to '新規登録はこちら', new_user_path, class: 'link-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>